                <div class="img__description_layer">
                    <a href="{{ path("app_oficina_get", {uid: 'aaf165e2-ed80-4e3f-b8ce-3b4f9488c4ea'}) }}" class="img__description">Contacto</a>
                </div>
            </div>

        </section>
    </main>
{% endblock %}
