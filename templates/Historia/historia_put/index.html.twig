{% extends 'base.html.twig' %}

{% block title %}Actualizar historia{% endblock %}

{% block main %}
    
    <main class="w-75 mx-auto mt-5 mb-5">
        <h2>Actualización de los datos de historia </h2>
        {{ form_start(formulario, {'attr': {'class': 'w-75 m-auto'}} ) }}
            <p>Separe los diferentes párrafos con '//'</p>
            <div class="form-group">
                {{ form_row(formulario.historia, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.enviar, {'attr': {'class': 'btn btn-primary w-100 my-4 m-auto'}} ) }}
                <p>(*) Campo obligatorio </p>
            </div>
            {{ form_end(formulario) }}
    </main>
{% endblock %}

