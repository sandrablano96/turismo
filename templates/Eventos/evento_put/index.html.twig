{% extends 'base.html.twig' %}

{% block title %}Editar evento{% endblock %}

{% block main %}
    
    <main class="w-75 mx-auto mt-5 mb-5">
        <h2>Actualizar evento</h2>
           {{ form_start(formulario, {'attr': {'class': 'w-50 m-auto'}} ) }}
            <div class="form_error">
                 {{ form_errors(formulario) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.titulo, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.descripcion, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div>
                {{ form_row(formulario.fecha, {'attr': {'class': 'mb-4'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.precio, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div class="form-group">
                
                {{ form_row(formulario.imagen, {'attr': {'class': 'form-control mb-4'}} ) }}
                {% if imagen is not null  %}
                    <p>Imagen actual</p>
                    <img src="{{ asset('/media/eventos/') ~ imagen }}" alt="{{ alt }}" style="width: 50px">
                {% endif %}
            </div>
            <div class="form-group">
                {{ form_row(formulario.tipo_evento, {'attr': {'class': 'form-select mb-4'}} ) }}
            </div>
            <div class="form-group">
               {{ form_row(formulario.enviar, {'attr': {'class': 'btn btn-primary w-100 my-4 m-auto'}} ) }}
                <p>(*) Campo obligatorio </p>
            </div>
            {{ form_end(formulario) }}
    </main>
{% endblock %}
