{% extends "base.html.twig" %} 
{% block title %}Login{% endblock %}
{% block  main %}
    <main class="w-75 mx-auto mt-5 mb-5">
        <div>
            <div class="login-content border-0 w-50 m-auto" 
                 <div class="login-header d-flex flex-column">
                <h3 class="modal-title col-12 text-center text-uppercase fw-bold">Iniciar sesion</h3>
            </div>
            <div class="login-body py-3">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-8">
                        <div class="login-wrap p-0">
                            <div class="messages">
                                {% if error %}
                                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                            </div>
                            <form action="{{ path('app_login') }}" method="post" class="signin-form w-50 m-auto" id="loginModal">
                                <input type="hidden" name="_target_path" value="/" />
                                <div class="form-group">
                                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control text-center p-3" placeholder="Email"/>
                                </div>
                                <div class="form-group">
                                    <input type="password" id="password" name="_password" class="form-control text-center p-3"
                                           placeholder="Contraseña">
                                    <span toggle="#password" class="fa fa-fw fa-eye field-icon toggle-password" style="font"></span>
                                </div>
                                <div class="form-group d-flex justify-content-center mb-4">
                                    <button type="submit" class="btn btn-login">Login</button>
                                </div>
                                <div class="form-group d-md-flex justify-content-around">
                                    <div class="w-50 text-start">
                                        <label class="checkbox-wrap ps-0">Recordarme
                                            <input type="checkbox" checked>
                                        </label>
                                    </div>
                                    <div class="w-50 text-end">
                                        <a href="#" style="color: #000;font-size: 1.1rem;">He olvidado la contraseña</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="login-footer m-auto w-50">
                <a href="{{path('app_register')}}" class="btn btn-secondary d-flex align-items-center justify-content-center w-25 m-auto">Registrarme</a>
            </div>
            <img src="{{ asset("media/svg/wave(7).svg") }}">
        </div>

    </main>
{% endblock %}
{% block javascripts%}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $(".toggle-password").click(function () {
            console.log('ey')
            $(this).toggleClass("fa-eye fa-eye-slash");
            var input = $(this).attr("toggle");
            if ($(input).attr("type") == "password") {
                $(input).attr("type", "text");
            } else {
                $(input).attr("type", "password");
            }
        });
        })
        
    </script>
{% endblock %}


