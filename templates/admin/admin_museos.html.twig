{% extends 'base.html.twig' %}
{% block title %} Gestión de museos {% endblock %}
{% block main %}
    
    <main class="w-75 mx-auto mt-5 mb-5">
        <a href="{{path('app_admin_menu')}}">Volver</a>
        <h2>Gestión de museos</h2>
        <div class="messages">
            {% for message in app.flashes('aviso') %}
                 <div class="flash-notice">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <a href="{{ path('app_museo_post') }}"  class="btn btn-secondary-dark">Alta</a>
        {% if museos is empty %}
            <p>Todavía no ha añadido ningún museo</p>
        {% else %}
        <table class="table w-25 m-auto">
            <th>Museo</th>
            {% for item in museos %}
                <tr>
                    <td>{{ item.nombre }}</td>
                    <td><a href="{{ path('admin_museo_get', {uid: item.uid}) }}">Gestionar museo</td>
                    <td><a href="{{ path('app_museo_delete', {uid: item.uid}) }}"><i class="fa-solid fa-circle-minus"></i></td>
                <tr>
            {% endfor %} 
        </table>
        {% endif %}
        
    </main>
{% endblock %}