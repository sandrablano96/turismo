
{% extends 'base.html.twig' %}
{% block title %} Historia de la localidad {% endblock %}
{% block main %}
    
    <main class="w-75 mx-auto mt-5 mb-5">
        <a href="{{path('app_admin_menu')}}">Volver</a>
        <h2>Historia</h2>
        <div class="messages">
            {% for message in app.flashes('aviso') %}
                 <div class="flash-notice">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <div class="table-responsive-md">
        <table class="table">
            <th>Historia</th>
                <tr>
                    <td>{{ historia.historia }}</td>
                    <td><a href="{{ path('app_historia_put', {uid: historia.uid}) }}"><i class="fa-solid fa-file-pen"></i></a></td>
                <tr>
        </table>
        </div>
        <h3>Galería de imágenes</h3>
        <a href="{{ path('app_h_galeria_post', {uid: historia.uid}) }}"  class="btn btn-secondary-dark">Alta</a>
        {% if historia.galeriaImagenes is empty %}
            <p>Todavía no ha añadido imágenes a la galería</p>
        {% else %}
        <div class="table-responsive-md">
        <table class="table">
            <th>Archivo</th>
            <th>Alt</th>
            {% for item in historia.galeriaImagenes %}
                <tr>
                <td><img src="{{ asset('media/historia/') ~ item.archivo }}" alt="{{ item.archivo }}" style="width:50px"></td>
                <td>{{ item.alt }}</td>
                <td><a href="{{ path('app_h_galeria_put', {uid: item.uid}) }}"><i class="fa-solid fa-file-pen"></i></a></td>
                <td><a href="{{ path('app_h_galeria_delete', {uid: item.uid}) }}"><i class="fa-solid fa-circle-minus"></i></a></td>
                </tr>
            {% endfor %}
        </table>
        </div>
        {% endif %}
        
    </main>
{% endblock %}
