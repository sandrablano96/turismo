{% extends 'base.html.twig' %}

{% block title %}Nuevo recurso patrimonial{% endblock %}

{% block main %}

    <main class="w-75 mx-auto mt-5 mb-5">
        <h2>Nuevo recurso patrimonial </h2>
        {{ form_start(formulario, {'attr': {'class': 'w-50 m-auto'}} ) }}
         <div class="form_error">
                 {{ form_errors(formulario) }}
            </div>
        <div class="form-group">
            {{ form_row(formulario.nombre, {'attr': {'class': 'form-control mb-2'}} ) }}
        </div>
        <div class="form-group">
            {{ form_row(formulario.descripcion, {'attr': {'class': 'form-control mb-2'}} ) }}
        </div>
        <div class="form-group">
            {{ form_row(formulario.direccion, {'attr': {'class': 'form-control mb-2'}} ) }}
        </div>
        <div class="form-group">
            {{ form_row(formulario.telefono, {'attr': {'class': 'form-control mb-2'}} ) }}
        </div>

        <div class="form-group">
            {{ form_row(formulario.email, {'attr': {'class': 'form-control mb-2'}} ) }}
        </div>

        <div class="form-group">
            {{ form_row(formulario.web, {'attr': {'class': 'form-control mb-2'}} ) }}
        </div>

        <div class="form-group">
            {{ form_row(formulario.horario, {'attr': {'class': 'form-control mb-2'}} ) }}
        </div>
        <div class="form-group">
            {{ form_row(formulario.precio, {'attr': {'class': 'form-control mb-2'}} ) }}
        </div>
        <div class="form-group">

            {{ form_row(formulario.imagen, {'attr': {'class': 'form-control mb-2'}} ) }}

        </div>
        <div class="form-group">
            {{ form_row(formulario.enviar, {'attr': {'class': 'form-control mb-2'}} ) }}
        </div>
        {{ form_end(formulario) }}
    </main>
{% endblock %}