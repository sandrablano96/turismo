{% extends 'base.html.twig' %}

{% block title %}Actualizar guia turístico{% endblock %}

{% block main %}
    
    <main class="w-75 mx-auto mt-5 mb-5">
    <a href="{{ path('admin_guias_get') }}">Volver a guías</a>
        {{ form_start(formulario, {'attr': {'class': 'w-75 m-auto'}} ) }}
         <div class="form_error">
                 {{ form_errors(formulario) }}
            </div>
              <div class="form-group">
                {{ form_row(formulario.nombre, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.telefono, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.email, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div class="form-group">
                
                {{ form_row(formulario.paginaWeb, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.tipo, {'attr': {'class': 'form-select mb-4'}} ) }}
            </div>
            <div class="form-group">
              {{ form_row(formulario.enviar, {'attr': {'class': 'btn btn-primary w-100 my-4 m-auto'}} ) }}
                <p>(*) Campo obligatorio </p>
            </div>
            {{ form_end(formulario) }}
    </main>
{% endblock %}

