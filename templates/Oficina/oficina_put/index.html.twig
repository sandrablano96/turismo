{% extends 'base.html.twig' %}

{% block title %}Actualizar datos de la oficina de Turismo{% endblock %}

{% block main %}
    
    <main class="w-75 mx-auto mt-5 mb-5">
        <h2>Actualizaci√≥n de los datos de contacto</h2>
            {{ form_start(formulario, {'attr': {'class': 'w-50 m-auto'}} ) }}
             <div class="form_error">
                 {{ form_errors(formulario) }}
            </div>
              <div class="form-group">
                {{ form_row(formulario.direccion, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.telefono, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.email, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div class="form-group">
                
                {{ form_row(formulario.horario, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.localidad, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.enviar, {'attr': {'class': 'btn btn-primary w-100 my-4 m-auto'}} ) }}
                <p>(*) Campo obligatorio </p>
            </div>
            {{ form_end(formulario) }}
    </main>
{% endblock %}

