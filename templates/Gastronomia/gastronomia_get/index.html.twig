{% extends 'base.html.twig' %}

{% block title %}Gastronom√≠a{% endblock %}

{% block main %}
<main class="mt-5 mb-5">
            <h2 class="text-center m-5">Gastronomia</h2>
            <section id="monthly-product" class="row w-100 p-5 m-0 d-flex justify-content-md-center">
                <div class="col-12 col-lg-4 p-4">
                    <img src="{{ asset('/public/media/') }}">
                </div>
                <div class="col-12 col-lg-8 ps-3 d-flex align-content-center flex-column">
                    <h3>{{ gastronomia.productoMes.nombre }}</h3>
                    <p>{{ gastronomia.productoMes.descripcion }}</p>
                    <div class="see-more d-flex justify-content-center align-content-end mt-5">
                        <button class="col-12 col-md-4 btn btn-secondary">Ver receta</button>
                    </div>
                </div>
            </section>
            <section id="typical_products"class="w-75 mx-auto mt-5 mb-5">
                <div class="row order-last m-auto w-75 list">
                    {% for item in gastronomia.productosTipicos %}
                    <div class="col-12 col-md-6 col-lg-4 event d-flex align-content-stretch mb-2">
                      <div class="card" style="width: 20rem;">
                        <img src="{{ asset('/public/media/'. {{gastronomia.productosTipicos.imagen}}) }}" class="card-img-bottom" alt="{{gastronomia.productosTipicos.nombre}}">
                        <div class="card-body">
                          <h5 class="card-title">{{gastronomia.productosTipicos.nombre}}</h5>
                          <p>{{gastronomia.productosTipicos.descripcion}}</p>
                        </div>
                      </div>
                    </div>
                    {% endfor %}
                  </div>
            </section>
        </main>
{% endblock %}
