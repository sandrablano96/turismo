{% extends 'base.html.twig' %}

{% block title %}Actualizar producto tipico{% endblock %}

{% block main %}
    
    <main class="w-75 mx-auto mt-5 mb-5">
        <h2>Actualizar producto tipico</h2>
            {{ form_start(formulario, {'attr': {'class': 'w-50 m-auto'}} ) }}
             <div class="form_error">
                 {{ form_errors(formulario) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.nombre, {'attr': {'class': 'form-control mb-2'}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.descripcion, {'attr': {'class': 'form-control mb-2'}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.imagen, {'attr': {'class': 'form-control mb-2'}} ) }}
                {% if imagen is not null  %}
                    <p>Imagen actual</p>
                    <img src="{{ asset('/media/gastronomia/') ~ imagen }}" alt="{{ alt }}" style="width: 50px">
                {% endif %}
            </div>
            <div class="form-group">
                {{ form_row(formulario.enviar, {'attr': {'class': 'form-control mb-2'}} ) }}
            </div>
            {{ form_end(formulario) }}
    </main>
{% endblock %}