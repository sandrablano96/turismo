{% extends 'base.html.twig' %}

{% block title %}Registrarme{% endblock %}

{% block main %}
    <main class="w-75 mx-auto mt-5 mb-5">
        <h2 class="text-center m-5">Registrarme</h2>
        <div id="registro" class="w-75 m-auto">
            {{ form_start(registrationForm, {'attr': {'class': 'w-75 m-auto'}} ) }}
            <div class="form-group">
                {{ form_row(registrationForm.nombre, {'attr': {'class': 'form-control mb-4'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.apellidos, {'attr': {'class': 'form-control mb-4'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.localidad, {'attr': {'class': 'form-control mb-4'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-4'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control mb-4'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>
            {{ form_errors(registrationForm, {'attr': {'class': 'list-unstyled'}}) }}
            <button type="submit" class="form-control btn btn-login submit px-3 my-3">Registrarme</button>
            {{ form_end(registrationForm) }}
        </div>

            <img src="{{ asset("media/svg/wave(6).svg") }}" alt="motivo decorativo">
    </main>
{% endblock %}
